{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "incremental": true,
        "module": "esnext",
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "noErrorTruncation": true,
        "importHelpers": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types/"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
